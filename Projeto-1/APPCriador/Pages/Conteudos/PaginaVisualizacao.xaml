<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APPCriador.Pages.PaginaVisualizacao"
             Title="Visualizando o Conteúdo"
             BackgroundColor="{StaticResource BackgroundColor}">

    <VerticalStackLayout Padding="10" Spacing="10" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
        <!-- Título do conteúdo -->
        <Editor Text="{Binding VideoTitle}" 
        FontSize="48"
        FontFamily="Gordania"
        FontAttributes="Bold"
        HorizontalOptions="Center"
        VerticalOptions="Start"
        Margin="0,8,10,0"
        TextColor="Black"
        IsReadOnly="True"
        BackgroundColor="Transparent"
        VerticalTextAlignment="Start" />


        <!-- WebView para video e imagens -->
        <WebView x:Name="webView"
                 HorizontalOptions="Center"
                 VerticalOptions="CenterAndExpand"
                 WidthRequest="1500" 
                 HeightRequest="800" />
    </VerticalStackLayout>
</ContentPage>
